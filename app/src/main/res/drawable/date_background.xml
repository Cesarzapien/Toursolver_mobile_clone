<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa de fondo con borde -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D0D0D0" /> <!-- Color del borde mÃ¡s oscuro -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Capa superior (contenido) -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0" /> <!-- Color de fondo original -->
            <corners android:radius="3dp" /> <!-- Ligeramente menor para ajustarse al borde -->
        </shape>
    </item>
</layer-list>